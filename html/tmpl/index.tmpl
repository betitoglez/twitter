
<!DOCTYPE html>
<html>
<head>
<title>Twitter Tags!</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<link
	href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"
	rel="stylesheet" media="screen">
</head>
<body>
	{% if fromCache %}
	   <h6>Obtenidos de la Caché!</h6>
	{% else %}
	   <h6>Obtenidos de la Base de datos</h6>
	{% endif %}
	<table class="table table-bordered">
	   <thead>
	      <tr>
	      	<th></th>
	      	<th>Nombre</th>
	      	<th>Tweet</th>
	      </tr>
	   </thead>
	   <tbody>
	      {% for tweet in tweets %} 
	      <tr>
	        <td><img alt='Foto perfil' src="{{tweet.image}}" class="img-circle"/></td>
	        <td>{{tweet.name}} </td>
	        <td>{{tweet.text}} </td>
	      </tr>
	      {% endfor %}
	   </tbody>
	</table>
	
	<script src="http://code.jquery.com/jquery.js"></script>
	<script
		src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</body>
</html>